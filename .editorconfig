# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[**.bashrc]
indent_style = tab
tab_width = 8

[**.c]
indent_size = 4

[**.conf]
indent_style = tab
tab_width = 8

[**.md]
trim_trailing_whitespace = false

[**.sh]
indent_style = tab
tab_width = 8
